---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="OSINT67" description={SITE_DESCRIPTION} />
		<title>OSINT67</title>
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main style="display: flex; flex-direction: column; align-items: center; justify-content: center; min-height: 70vh;">
			<img src="/OrinelStudiosLogoBlackTransparent.png" alt="Orinel Studios Logo" style="width: 140px; height: 140px; object-fit: contain; margin-bottom: 1.5rem;" />
			<h1 style="font-size: 2rem; margin-bottom: 1rem; color: #222; font-weight: 700; letter-spacing: 1px;">OSINT67</h1>
			<p style="font-size: 1.15rem; color: #444; max-width: 600px; text-align: center; margin-bottom: 2rem;">
				<strong>OSINT67</strong> is a dedicated branch of Orinel Studios, leveraging the advanced tools, methodologies, and collaborative structures that define Orinel. Our mission is to conduct open source intelligence (OSINT) operations with a focus on human rights, crimes against humanity, and related global issues. By harnessing the power of open data, technology, and a multidisciplinary team, OSINT67 provides actionable intelligence and analysis to support justice, accountability, and the protection of vulnerable communities worldwide.
			</p>
		</main>
		<Footer />
	</body>
</html>
